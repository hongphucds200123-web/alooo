background_block = """  <!-- Background -->
  <div class="fixed inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-indigo-700/20 via-slate-950 to-slate-950"></div>
    <div class="absolute inset-0 bg-grid opacity-60"></div>
